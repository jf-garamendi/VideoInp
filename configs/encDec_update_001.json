{
  "general": {
    "exp_name": "Pierrick_Complete_001_newArch",
    "agent": "EncDec_update_agent_001",
    "mode" : "train",
    "log_dir": "../../data/verbose/logs/",
    "device": "cuda"
  },

  "data": {
    "train_root_dir": "../../data/datasets/built/davis_no_mask",
    "val_root_dir": "../../data/datasets/built/5Tennis_c",
    "train_batch_size": 1,
    "val_batch_size": 1,
    "number_of_frames": 10,
    "random_holes_on_the_fly": true,
    "n_random_holes_per_frame": 5
  },

  "optimizer": {
    "weight_decay": 4e-5,
    "learning_rate": 1e-4,
    "beta_1" : 0.9,
    "beta_2" : 0.999
  },

  "model": {
    "max_num_steps_update": 20,
    "encDec" : "EncDec_pierrick",
    "update" : "Update_pierrick",
    "partial_mode_update" : "pow"
  },

  "training": {
    "encDec_n_epochs": 1000,
    "update_n_epochs": 2000
  },

  "verbose": {
    "tensorboard_root_dir": "../../data/verbose/tensor_board/",
    "verbose_out_images" : "../../data/verbose/training_out/"
  },

  "checkpoint": {
    "saving_n_iter": 1,
    "root_dir": "../../data/verbose/checkpoint/",
    "enc_dec_checkpoint_filename" : "enc_dec_checkpoint.tar",
    "update_checkpoint_filename": "update_checkpoint.tar"

  },

  "losses": {
    "encDec_losses": {
      "losses": ["L1_loss"],
      "weights": [1]
    },
    "update_losses": {
      "losses": ["L1_loss", "TV_loss", "Min_fbbf_loss"],
      "weights": [1, 10, 2]
    }
  },

  "custom_layers": {
    "partial_mode_update": "pow"
  }
}